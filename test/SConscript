Clean(env_mv_png.RunSerial
      ('test_TreeK-D3-R2-L4.unit',
       bin_path + '/test_TreeK',
       ARGS='3 2 4'),
      Glob('#/test/' + type + '/TreeK-D=3-R=2-L=4*png'))
Clean(env_mv_png.RunSerial
      ('test_TreeK-D3-R2-L5.unit',
       bin_path + '/test_TreeK', ARGS='3 2 5'),
