       '#/input/test_enzo-p_1.in.out'])

Clean(env_mv_png.RunParallel ('test_enzo-p_2.unit',
		bin_path + '/enzo-p', 
		ARGS='input/test_enzo-p_2.in'),
      [Glob('#/test/' + type + '/enzo-p_2-??????-*.png'),  # field added in non-charm
