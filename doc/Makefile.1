current:pdf2
PAPER = `pwd | awk 'BEGIN{FS="/"}{print $$NF}'`

ps:dvi
	dvips -o $(PAPER).ps $(PAPER).dvi
ps2:ps
	a2ps -2 $(PAPER).ps -o $(PAPER)2.ps
2up: ps
	a2ps -M Letter -2 -o $(PAPER)2.ps $(PAPER).ps
html:
	tth -e2 $(PAPER).tex > $(PAPER).html
pdf:dvi
	dvipdf $(PAPER).dvi $(PAPER).pdf
pdf2: include.tex uml figures
#	pdflatex $(PAPER).tex
	pdflatex $(PAPER).tex
dvi: include.tex uml figures
	make -C uml
	-latex $(PAPER)
bib: 
	bibtex $(PAPER)

pdfimg: include.tex uml figures
	make -C uml
	-pdflatex $(PAPER)
uml:
	ln -s ../uml .
.PHONY: figures
figures:
	-@ln -s ../figures/* .

include.tex:
	ln -s ../include.tex .

glo:
	makeindex $(PAPER).glo -s $(PAPER).ist -t $(PAPER).glg -o $(PAPER).gls

clean:
	-@rm -f *~ *.aux \
        $(PAPER).dvi \
        $(PAPER).log \
        $(PAPER).ps \
        $(PAPER).pdf \
        $(PAPER).html \
        $(PAPER).snm \
        $(PAPER).nav \
        $(PAPER).out \
        $(PAPER).toc
distclean: clean
	-@rm uml include.tex 
	-@rm makefile # Must be last!
