current:pdf
PAPER = `pwd | awk 'BEGIN{FS="/"}{print $$NF}'`

ps:dvi
	dvips -o $(PAPER).ps $(PAPER).dvi
ps2:ps
	a2ps -2 $(PAPER).ps -o $(PAPER)2.ps
pdf:dvi
	dvipdf $(PAPER).dvi $(PAPER).pdf
pdf2:ps2
	ps2pdf $(PAPER)2.ps $(PAPER)2.pdf
2up: ps
	a2ps -M Letter -2 -o $(PAPER)2.ps $(PAPER).ps
html:
	tth -e2 $(PAPER).tex > $(PAPER).html

dvi: include.tex uml figures
	make -C uml
	-latex $(PAPER)

pdfimg: include.tex uml figures
	make -C uml
	-pdflatex $(PAPER)
uml:
	ln -s ../uml .
.PHONY: figures
figures:
	-@ln -s ../figures/* .

include.tex:
	ln -s ../include.tex .

clean:
	-@rm -f *~ *.aux *.png \
        $(PAPER).dvi \
        $(PAPER).log \
        $(PAPER).ps \
        $(PAPER).pdf \
        $(PAPER).html \
        $(PAPER).snm \
        $(PAPER).nav \
        $(PAPER).out \
        $(PAPER).toc
distclean: clean
	-@rm uml include.tex 
	-@rm makefile # Must be last!
