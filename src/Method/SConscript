#------------------------------
# IMPORTS
#------------------------------

Import('env')
Import('type')

Import('bin_path')
Import('inc_path')
Import('lib_path')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['method', 
              'mesh', 'field', 
              'memory', 'parallel', 
              'parameters', 
              'error','monitor',
              'cello']

libraries  = []

#------------------------------
# SOURCE
#------------------------------

includes = [Glob('method*hpp'), Glob('*.h')]
sources  = [Glob('method*cpp')]

#------------------------------
# ENVIRONMENTS
#------------------------------

env = env.Clone(LIBS=[components,libraries])

#------------------------------
# TARGETS
#------------------------------

libraries = env.Library ('method', sources)

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install (inc_path,includes))
env.Alias('install-lib',env.Install (lib_path,libraries))








