Import('env')

env.Alias('install-inc',env.Install ('$CPPPATH',[Glob('*hpp')]))

sources  = [Glob('error*cpp')]

env.Library ('error', [sources])
env.Alias('install-lib',env.Install ('$LIBPATH','liberror.a'))

test_error   = env.Program (['test_error.cpp',  sources])
env.Alias('install-bin', env.Install ('$BINPATH', test_error))




