Import('env')

components = ['parameters', 'error','disk','memory','monitor','parallel','method']
libraries  = ['hdf5', 'png', '$FORTRANLIBS']

env = env.Clone (LIBS = [components,libraries])

includes   = ['method_MethodEnzoPpm.hpp']

sources  = [Glob('initialize*cpp'),
            Glob('Cosmology*.cpp'),
            Glob('Grid_*cpp'),
            Glob('*.F'),
           'method_MethodEnzoPpm.cpp',
           'cello_hydro.cpp',
           'c_message.cpp',
           'data_dump.cpp',
	   'image_dump.cpp',
	   'FindField.cpp',
           'SetExternalBoundary.cpp',
           'sum_field.cpp']



binaries = [env.Program (['test_ppm.cpp',      sources]),
            env.Program (['test_enzo_ppm.cpp', sources])]

libraries = env.Library ('user-ppm', sources)

env.Alias('install-inc',env.Install ('#/include',includes))
env.Alias('install-bin', env.Install ('$BINPATH', binaries))
env.Alias('install-lib',env.Install ('#/lib',    libraries))
