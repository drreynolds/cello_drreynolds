Import('env')

components = ['error', 'disk', 'memory', 'monitor', 'parallel']
libraries  = ['hdf5', 'png', '$FORTRANLIBS']

env = env.Clone(LIBS = [components,libraries])

# not supported by older scons
# env.SetOption('warn', 'no-fortran-cxx-mix')

sources_ppml  = [
	'cello_hydro.cpp',
        Glob('Cosmology*cpp'),
	'data_dump.cpp',
	'image_dump.cpp',
        Glob('Grid_*cpp'),
        Glob('initialize_*cpp'),
	'PPML_Conservative.F',
	'PPML_HLLD.F',
	'PPML_MAIN.F',
	'PPML_monot.F',
	'PPML_potokx.F',
	'PPML_potoky.F',
	'PPML_potokz.F',
	'PPML_Primitive.F',
	'PPML_sub.F',
	'PPML_TimeStep.F',
	'SetExternalBoundary.cpp']

Export('sources_ppml')

binaries  = env.Program (['test_ppml.cpp', sources_ppml])

env.Alias('install-bin', env.Install ('$BINPATH', binaries))







