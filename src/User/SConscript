Import('env')

includes = [Glob('user*hpp'), Glob('*.h')]
sources  = [Glob('user*cpp')]

components = ['user', 'data', 'field', 'error','parallel', 'monitor', 'parameters', 'memory', 'cello']
libraries  = ['png', 'boost_thread-mt', '$FORTRANLIBS']

env = env.Clone(LIBS=[components,libraries])

libraries = env.Library ('user', sources)

env.Alias('install-inc',env.Install ('#/include',includes))
env.Alias('install-lib',env.Install ('#/lib',    libraries))



