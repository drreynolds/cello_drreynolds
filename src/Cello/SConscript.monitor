#------------------------------
# IMPORTS
#------------------------------

Import('env')
Import('type')

Import('bin_path')
Import('inc_path')
Import('lib_path')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['parallel',
	      'error','monitor','performance',
	      'test','cello']

#------------------------------
# SOURCE
#------------------------------

includes   = [Glob('monitor*hpp')]
sources    = [Glob('monitor*cpp')]

#------------------------------
# ENVIRONMENTS
#------------------------------

env        = env.Clone(LIBS=[components])

#------------------------------
# TARGETS
#------------------------------

libraries  = env.Library ('monitor', [sources])

if (type == "charm"):
	sources = sources + ["../Main/main.cpp"]

binaries   = env.Program (['test_Monitor.cpp', sources])

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-bin',env.Install (bin_path,binaries))
env.Alias('install-inc',env.Install (inc_path,includes))
env.Alias('install-lib',env.Install (lib_path,libraries))





