#/bin/csh -f

set run = 0
set old = 0
set new = 1

set colormap_dir = /usr/share/h5utils/colormaps/

set color = vga

if ($run == 1) then
  make dep
  make clean
  make
  test_tree >& out.test_tree
  test_tree_k >& out.test_tree_k
  echo "done"
endif

# new

if ($new == 1) then
   foreach dim (2 3)
   foreach tree (2 4 8 16)
     foreach full (0 1)
       foreach type (0 1 2)
         if ($dim == 2) then
            set file = "tree$dim-$tree-f$full-$type.hdf5"
            h5topng -c $colormap_dir/$color $file
            mv $file.png k$tree-f$full-t$type-d$dim.png
         else
	   foreach axis (x y z)
              set file = "tree$dim-$tree-f$full-$type-$axis.hdf5"
              h5topng -c $colormap_dir/$color $file
              mv $file.png k$tree-f$full-t$type-d$dim-a$axis.png
           end
         endif 
       end
     end
   end
   end
endif

