#/bin/csh -f

set run = 0
set old = 0
set new = 1

set colormap_dir = /usr/share/h5utils/colormaps/

set color = vga

if ($run == 1) then
  make dep
  make clean
  make
  test_tree >& out.test_tree
  test_tree_k >& out.test_tree_k
  echo "done"
endif

# new

if ($new == 1) then
   foreach dim (2 3)
   foreach tree (2 4 8)
     foreach full (0 1)
       foreach type (0 1 2)
         set file = "tree$dim-$tree-f$full-$type-new.hdf5"
         echo "$file"
         if ($dim == 2) then
            h5topng -c $colormap_dir/$color $file
         else
            h5topng -x 127 -c $colormap_dir/$color $file
            mv $file.png $file-x.png
            h5topng -y 127 -c $colormap_dir/$color $file
            mv $file.png $file-y.png
            h5topng -z 127 -c $colormap_dir/$color $file
            mv $file.png $file-z.png
         endif 
       end
     end
   end
   end
endif

# old

if ($new == 1) then
   foreach tree (2 4 8)
     foreach full (0 1)
       foreach type (0 1 2)
         set file = "tree$tree-f$full-$type-old.hdf5"
         echo "$file"
         h5topng -c $colormap_dir/$color $file
       end
     end
   end
endif



