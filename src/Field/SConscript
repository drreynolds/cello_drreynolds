Import('env')

components = ['error']
env = env.Clone(LIBS=components)

includes = [Glob('field*hpp')]
sources  = [Glob('field*cpp')]

env.Alias('install-inc',env.Install ('#/include',includes))

libraries = env.Library ('field', [sources])

test_array  = env.Program (['test_array.cpp',  sources])
test_block  = env.Program (['test_block.cpp',  sources])
test_field  = env.Program (['test_field.cpp',  sources])

tests      = [test_array, test_block, test_field]

env.Alias('install-lib',env.Install ('#/lib',libraries))
env.Alias('install-bin',env.Install ('$BINPATH', tests))




