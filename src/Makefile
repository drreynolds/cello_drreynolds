.PHONY: all clean

all:
	scons -u
clean:
	scons -u -c

#=======================================================================

.PHONY: doc doc-html doc-latex
doc: doc-html doc-latex
doc-html:
	doxygen Doxyfile-html
doc-latex:
	doxygen Doxyfile-latex
	@echo;echo "SEE Makefile FOR MANUAL UPDATES TO latex/refman.tex"; echo
doc-rtf:
	doxygen Doxyfile-rtf

