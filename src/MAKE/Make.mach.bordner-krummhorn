#========================================================================
#
# VARIABLES
#
#    CXX          C++ compiler
#    OPT          Compiler options
#    LIB_HDF5     HDF5 libraries
#    INC_HDF5     HDF5 includes
#
#========================================================================

  SHELL = /bin/bash

#------------------------------------------------------------------------
# Compilers
#------------------------------------------------------------------------

  CXX = g++
  FC  = gfortran

#------------------------------------------------------------------------
# OPT:  optimization/debug compiler flags
#------------------------------------------------------------------------

  PROF = $(PROF_OFF)

  PROF_GPROF = -pg
  PROF_GCOV  = -fprofile-arcs -ftest-coverage
  PROF_OFF   = -fomit-frame-pointer
  PROF_GEN   = -fprofile-generate
  PROF_USE   = -fprofile-use

  OPT = -O3 -pipe $(PROF)
  OPT = -g -fsignaling-nans
  OPT = -g -fsignaling-nans -Wall

#------------------------------------------------------------------------
# HDF Library and includes
#------------------------------------------------------------------------

  LIB_HDF5 = -lhdf5
  INC_HDF5 = 

#------------------------------------------------------------------------
# System includes for makedepend
#------------------------------------------------------------------------

# ( "cpp -v < /dev/null" to get these: )
  INC_SYS = \
    -I /usr/local/include \
    -I /usr/lib/gcc/x86_64-linux-gnu/4.3.3/include \
    -I /usr/lib/gcc/x86_64-linux-gnu/4.3.3/include-fixed \
    -I /usr/include/c++/4.3 \
    -I /usr/include/c++/4.3/x86_64-linux-gnu

