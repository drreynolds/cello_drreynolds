Import('env')

includes = [Glob('array*hpp')]

env.Alias('install-inc',env.Install ('#/include',includes))

sources  = [Glob('array*cpp')]

libraries = env.Library ('array', [sources])

env.Alias('install-lib',env.Install ('#/lib',libraries))

test_array   = env.Program (['test_array.cpp',   sources])
test_block   = env.Program (['test_block.cpp',   sources])
env.Alias('install-bin', env.Install ('$BINPATH', [test_array,test_block]))






