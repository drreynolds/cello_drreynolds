#------------------------------
# IMPORTS
#------------------------------

Import('env')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['error', 'cello']
testing    = ['parallel']
libraries  = ['png','boost_thread-mt']

#------------------------------
# ENVIRONMENTS
#------------------------------

env        = env.Clone(LIBS=[components,libraries])
env_test   = env.Clone(LIBS=[components,libraries,testing])

#------------------------------
# SOURCE
#------------------------------

includes   = [Glob('monitor*hpp'), Glob('png*h')]
sources    = [Glob('monitor*cpp'), Glob('png*cpp')]

#------------------------------
# TARGETS
#------------------------------

libraries    = env.Library      ('monitor', [sources])
test_monitor = env_test.Program (['test_Monitor.cpp', sources])

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install ('#/include',includes))
env.Alias('install-lib',env.Install ('#/lib',    libraries))
env.Alias('install-bin',env.Install ('#/bin', test_monitor))





