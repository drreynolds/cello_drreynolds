#------------------------------
# DIRECTORIES
#------------------------------

#------------------------------
# IMPORTS
#------------------------------

Import('env')

Import('inc_path')
Import('lib_path')

#------------------------------
# DEPENDENCIES
#------------------------------

#------------------------------
# SOURCE
#------------------------------

includes_grackle = [Glob('*h'),Glob('*def')]
sources_grackle  = [Glob('*C'),Glob('*F')]

#------------------------------
# ENVIRONMENTS
#------------------------------

#------------------------------
# TARGETS
#------------------------------

libraries_grackle      = env.Library ('grackle', sources_grackle)


#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install (inc_path,includes_grackle))
env.Alias('install-lib',env.Install (lib_path,libraries_grackle))
