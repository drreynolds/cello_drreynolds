#------------------------------
# DIRECTORIES
#------------------------------

#------------------------------
# IMPORTS
#------------------------------

Import('env')

Import('inc_path')
Import('lib_path')

#------------------------------
# DEPENDENCIES
#------------------------------

#------------------------------
# SOURCE
#------------------------------

includes = [Glob('png*h')]
sources  = [Glob('png*cpp')]

includes_expreval = [Glob('ExprEval/*h')]
sources_expreval  = [Glob('ExprEval/*cpp')]

#------------------------------
# ENVIRONMENTS
#------------------------------

#------------------------------
# TARGETS
#------------------------------

libraries          = env.Library ('external', sources)
libraries_expreval = env.Library ('expreval', sources_expreval)


#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install (inc_path,includes))
env.Alias('install-lib',env.Install (lib_path,libraries))

env.Alias('install-inc',env.Install (inc_path,includes_expreval))
env.Alias('install-lib',env.Install (lib_path,libraries_expreval))
