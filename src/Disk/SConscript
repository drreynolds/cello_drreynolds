#------------------------------
# IMPORTS
#------------------------------

Import('env')
Import('type')

#------------------------------
# DEPENDENCIES
#------------------------------

components = ['error',
              'cello']
libraries  = ['hdf5']

if (type == "charm"):
   components = components + ['monitor','performance']
   libraries  = libraries  + ['png']
#------------------------------
# ENVIRONMENTS
#------------------------------

env = env.Clone(LIBS=[components,libraries])

#------------------------------
# SOURCE
#------------------------------

includes = [Glob('disk*hpp')]
sources  = [Glob('disk*cpp')]

#------------------------------
# TARGETS
#------------------------------

libraries  = env.Library ('disk', sources)

if (type == "charm"):
	sources = sources + ['../main.cpp']

test_FileHdf5  = env.Program (['test_FileHdf5.cpp', sources])
test_FileIfrit = env.Program (['test_FileIfrit.cpp', sources])

binaries = [test_FileHdf5,test_FileIfrit]

#------------------------------
# INSTALL
#------------------------------

env.Alias('install-inc',env.Install ('#/include',  includes))
env.Alias('install-lib',env.Install ('#/lib',      libraries))
env.Alias('install-bin',env.Install ('#/bin/'+type,binaries))



