Import('env')

libraries  = ['hdf5', 'field']
components = ['error']

env = env.Clone(LIBS=[components,libraries])

includes = [Glob('disk*hpp')]
sources  = [Glob('disk*cpp')]

libraries = env.Library ('disk', sources)

test_hdf5  = env.Program (['test_DiskHdf5.cpp', sources])
test_ifrit = env.Program (['test_Ifrit.cpp', sources])

env.Alias('install-inc',env.Install ('#/include',includes))
env.Alias('install-bin',env.Install ('$BINPATH', [test_hdf5,test_ifrit]))
env.Alias('install-lib',env.Install ('#/lib',libraries))



