Import('env')

libraries  = ['png']

env = env.Clone(LIBS=[libraries])

env.Alias('install-inc',env.Install ('$CPPPATH',[Glob('parallel*hpp')]))

sources  = [Glob('parallel*cpp')]

env.Library ('parallel', [sources])
env.Alias('install-lib',env.Install ('$LIBPATH','libparallel.a'))

test_parallel_mpi = env.Program (['test_parallel_mpi.cpp', sources])
env.Alias('install-bin', env.Install ('$BINPATH', [test_parallel_mpi]))


