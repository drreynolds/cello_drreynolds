#!/bin/csh -f

make -C ../src install >& out.make

set BIN = ../bin

set tests = (L2.G16.P1 \
             L2.G16.P8 \
              L2.G2.P1 \
              L2.G8.P4 )
set procs = (        1 \
                     8 \
                     1 \
                     4)

set i = 1
while ($i <= $#tests)

   set test = $tests[$i]
   set ip   = $procs[$i]

   echo "------------------------------------------------------------------------"
   echo "mpirun -np ${ip} ${BIN}/hypre-grav input.${test} > output.${test}"
         mpirun -np ${ip} ${BIN}/hypre-grav input.${test} > output.${test}
   echo "------------------------------------------------------------------------"

   @ i = $i + 1
end
