SHELL = /bin/bash

CPPFLAGS = -g -Wall
# CPPFLAGS = -g

# JBPERF

#--------------------------------
JBDEF = 
JBINC = 
JBLIB = 
#--------------------------------
JBDEF = -DUSE_JBPERF
JBINC = -I$(HOME)/lcaperf/include 
JBLIB = -L$(HOME)/lcaperf/lib -ljbperf
#--------------------------------

# LIBPNG

PNGDEF = -DNO_FREETYPE
PNGINC = 
PNGLIB = -lpng

# HYPRE

HYPREDEF = 
HYPREINC = -I$(HOME)/hypre/src/hypre/include
HYPRELIB = -L$(HOME)/hypre/src/hypre/lib -lHYPRE 

# HDF5

HDF5DEF = 
HDF5INC = -I/usr/local/hdf5/include
HDF5LIB = -L/usr/local/hdf5/lib -lhdf5

# CELLO

CELLOTOP = ../..
CELLOOBJ = $(CELLOTOP)
CELLOINC = -I$(CELLOTOP)/include
CELLOLIB = -L$(CELLOTOP)/lib -lcello

# Assemble defines, includes, and libs
DEF =      $(JBDEF) $(PNGDEF) $(HYPREDEF) $(HDF5DEF) $(CELLODEF)
INC =      $(JBINC) $(PNGINC) $(HYPREINC) $(HDF5INC) $(CELLOINC)
LIB =  -lm $(JBLIB) $(PNGLIB) $(HYPRELIB) $(HDF5LIB) $(CELLOLIB)

# Set object files
OBJS_ALL = \
       constants.o \
       domain.o \
       faces.o \
       grid.o \
       hierarchy.o \
       hypre.o \
       level.o \
       mpi.o \
       parameters.o \
       point.o \
       problem.o \
       sphere.o

OBJS_INIT  = hypre-init.o
OBJS_TEST  = hypre-test.o
OBJS_SOLVE = hypre-solve.o $(OBJS_ALL)
OBJS_PNG  = hypre-png.o grid.o mpi.o domain.o faces.o pngwriter.o

all: hypre-solve hypre-init hypre-test hypre-png debug-matrix enzo2hypre

hypre-init: $(OBJS_INIT)
	$(CPP) -o hypre-init $(OBJS_INIT) $(LIB)
hypre-test: $(OBJS_TEST)
	$(MPCPP) -o hypre-test $(OBJS_TEST) $(LIB)
hypre-solve: $(OBJS_SOLVE)
	$(MPCPP) -o hypre-solve $(OBJS_SOLVE) $(LIB)
hypre-png: $(OBJS_PNG)
	$(MPCPP) -o hypre-png $(OBJS_PNG) $(LIB)
debug-matrix: debug-matrix.o
	$(CPP) -o debug-matrix debug-matrix.o
enzo2hypre: enzo2hypre.cpp
	$(CPP) -o enzo2hypre enzo2hypre.cpp $(INC) $(LIB)

BIN = ../bin
.PHONY: install
install: hypre-solve hypre-init hypre-test hypre-png
	(if [ ! -e $(BIN) ]; then mkdir $(BIN); fi)
	cp hypre-solve $(BIN)
	cp hypre-init  $(BIN)
	cp hypre-test  $(BIN)
	cp hypre-png   $(BIN)


.cpp.o:
	$(MPCPP) -c -o $*.o $*.cpp $(CPPFLAGS) $(INC) $(DEF)

.PHONY: dep
dep:
	-@(makedepend -fDEPEND *.cpp *.hpp) >& /dev/null

include DEPEND

.PHONY: clean
clean:
	rm -f *.o hypre-solve *~ \#*
	rm -rf html latex

.PHONY: doc
doc:
	doxygen
	cp doxygen.css html
	cd latex; \
        latex refman.tex; \
        latex refman.tex; \
        dvipdf refman.dvi; \
        mv refman.pdf hypre-solve-ref.pdf; \
        dvips -o hypre-solve-ref.ps refman.dvi

.PHONY: clean-doc
clean-doc:
	rm -rf html latex


