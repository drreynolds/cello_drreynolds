#!/bin/csh -f

set n = 16

#----------------------------------------------------------------------
# Centered serial

run $n 1 1 1 1 0
run $n 1 1 1 2 0
run $n 1 1 1 3 0
run $n 1 1 1 4 0

#----------------------------------------------------------------------
# Centered parallel

# x-axis
run $n 2 1 1 1 0
run $n 2 1 1 2 0
run $n 2 1 1 3 0
run $n 2 1 1 4 0

# y-axis
run $n 1 2 1 1 0
run $n 1 2 1 2 0
run $n 1 2 1 3 0
run $n 1 2 1 4 0

# z-axis
run $n 1 1 2 1 0
run $n 1 1 2 2 0
run $n 1 1 2 3 0
run $n 1 1 2 4 0

#----------------------------------------------------------------------
# Offset serial

run $n 1 1 1 2 1
run $n 1 1 1 3 1
run $n 1 1 1 4 1

#----------------------------------------------------------------------
# Offset parallel

# x-axis
run $n 2 1 1 2 1
run $n 2 1 1 3 1
run $n 2 1 1 4 1

# y-axis
run $n 1 2 1 2 1
run $n 1 2 1 3 1
run $n 1 2 1 4 1

# z-axis
run $n 1 1 2 2 1
run $n 1 1 2 3 1
run $n 1 1 2 4 1
