#!/bin/tcsh -f

set offset = 1

set size = "size 480,300"
# set yrange = "[0.1:100]"
#
set yrange = "[10:1000000]"
 set yrange = "[]"

set xrange = "[]"

set ptype = "w p"

set files = (X.0?.00.00000)
set levels = $#files
echo $levels


# Get x-* y-* z-* yz-* zx-* and xy-* data files

set level = 0
set mid = 8

foreach X (X.0?.00.00000)

   set XP = $X:r

   # Find mid-point

   set nx0 = `awk '/\(/{print $2}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`
   set ny0 = `awk '/\(/{print $3}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`
   set nz0 = `awk '/\(/{print $4}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`
   set nx1 = `awk '/\(/{print $6}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`
   set ny1 = `awk '/\(/{print $7}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`
   set nz1 = `awk '/\(/{print $8}' < $X | head -1 | sed 's/(//g' | sed 's/,//g' | sed 's/)//g'`

   # (WARNING: @ evaluating ( $nx1 - $nx0 + 1 ) results in ( $nx1 - $nx0 - 1 ).
   #  Go figure.

   echo "DEBUG $nx0 $ny0 $nz0 $nx1 $ny1 $nz1"
   @ nx =  $nx0 + ( 1 + $nx1 - $nx0 ) / $mid
   @ ny =  $ny0 + ( 1 + $ny1 - $ny0 ) / $mid
   @ nz =  $nz0 + ( 1 + $nz1 - $nz0 ) / $mid


   echo "DEBUG $nx $ny $nz"

   set x0 = '('"$nx"
   set y0 = ', '"$ny"','
   set z0 = ', '"$nz"';'
  

  grep "$x0" < $X | awk '{print $3,$4,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > yz-$XP
  grep "$y0" < $X | awk '{print $4,$2,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > zx-$XP
  grep "$z0" < $X | awk '{print $2,$3,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > xy-$XP

  grep "$y0" < $X | grep "$z0" | awk '{print $2,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > x-$XP
  grep "$z0" < $X | grep "$x0" | awk '{print $3,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > y-$XP
  grep "$x0" < $X | grep "$y0" | awk '{print $4,$6}' | sed 's/(//g' | sed 's/,//g' | sed 's/;//g' > z-$XP

  @ level = $level + 1
  @ mid = $mid / 2

end

set head = "set terminal png $size; set log y"

#------------------------------------------------------------------------
if ($levels == 1) then
#------------------------------------------------------------------------
   foreach axis (x y z)
      echo "$head; set output '$axis.png';" \
           "plot $xrange$yrange '$axis-X.00.00' title 'level 0' $ptype" \
           | gnuplot  
   end
#   echo "$head; set output 'x-y-z.png'; plot $xrange$yrange 'x-X.00.00' title 'x level 0' $ptype, 'y-X.00.00' title 'y level 0' $ptype, 'z-X.00.00' title 'z level 0' $ptype" | gnuplot  
#------------------------------------------------------------------------
else if ($levels == 2) then
#------------------------------------------------------------------------
   foreach axis (x y z)
     echo "$head; set output '$axis.png';" \
          "plot $xrange$yrange " \
            "'$axis-X.00.00' " \
             "using ("'$'"1*2+0.5):("'$'"2) title 'level 0' $ptype," \
            "'$axis-X.01.00' " \
             "using ("'$'"1):("'$'"2) title 'level 1' $ptype" \
            | gnuplot  
   end
#------------------------------------------------------------------------
else if ($levels == 3) then
#------------------------------------------------------------------------
   foreach axis (x y z)
     echo "$head; set output '$axis.png';" \
          "plot $xrange$yrange " \
            "'$axis-X.00.00' " \
             "using ("'$'"1*4+0.25):("'$'"2) title 'level 0' $ptype," \
            "'$axis-X.01.00' " \
             "using ("'$'"1*2+0.5):("'$'"2) title 'level 1' $ptype," \
            "'$axis-X.02.00' " \
             "using ("'$'"1*1):("'$'"2) title 'level 2' $ptype" \
            | gnuplot  
   end
#------------------------------------------------------------------------
else if ($levels == 4) then
#------------------------------------------------------------------------
   foreach axis (x y z)
     echo "$head; set output '$axis.png';" \
          "plot $xrange$yrange " \
            "'$axis-X.00.00' " \
             "using ("'$'"1*8+0.125):("'$'"2) title 'level 0' $ptype," \
            "'$axis-X.01.00' " \
             "using ("'$'"1*4+0.25):("'$'"2) title 'level 1' $ptype," \
            "'$axis-X.02.00' " \
             "using ("'$'"1*2+0.5):("'$'"2) title 'level 2' $ptype," \
            "'$axis-X.03.00' " \
             "using ("'$'"1*1):("'$'"2) title 'level 2' $ptype" \
            | gnuplot  
   end
endif


echo "<html><img src="x.png"></img></br/>" > index.html
echo "      <img src="y.png"></img></br/>" >> index.html
echo "      <img src="z.png"></img></br/>" >> index.html
#echo "      <img src="x-y-z.png"></img></br/></html>" >> index.html




